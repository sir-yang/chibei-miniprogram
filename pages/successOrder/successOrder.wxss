
.top_spice {
    width: 100%;
    height: 10rpx;
    background: #f2f3f4;
}
.icon_box {
    margin-top: 200rpx;
    height: 487rpx;
}
.icon_img {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 508rpx;
    height: 487rpx;
}

.status_text {
    position: absolute;
    bottom: 150rpx;
    left: 50%;
    transform: translateX(-50%);
    font-size: 20rpx;
    color: #666;
}

.buy_btn {
    width: 135rpx;
    height: 60rpx;
    margin: 0 auto 10rpx;
    border: 2rpx solid #666;
    border-radius: 10rpx;
    -webkit-border-radius: 10rpx;
    -moz-border-radius: 10rpx;
    -o-border-radius: 10rpx;
    font-size: 24rpx;
    color: #666;
    text-align: center;
    line-height: 60rpx;
}